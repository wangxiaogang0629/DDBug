.box {
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    display: flex;
    justify-content: flex-end;
    align-items:flex-end
}

.btn {
    position: absolute;
    bottom: 0;
    left: 0;
    height: 100rpx;
    width: 100%;
    background: #4990e2;
    text-align: center;
    line-height: 100rpx;
    color: #fff;
}