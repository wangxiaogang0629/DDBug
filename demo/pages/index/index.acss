.box {
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    display: flex;
    align-items:flex-end;
    z-index:5;
    background:rgba(58, 58, 58, 0.4);
}

.btn {
    height: 100rpx;
    width: 100%;
    background: #4990e2;
    text-align: center;
    line-height: 100rpx;
    color: #fff;
}